{
    "manifest_version": 3,
    "name": "Website Tracker",
    "version": "1.0",
    "description": "Track time spent on websites and set time limits.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "webRequest",
        "webNavigation"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}